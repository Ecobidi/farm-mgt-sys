<%- include ('partials/top') %>

    <div class="row space pb-0 mb-4 px-2 border-bottom">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title">Vaccines</h3>
        <div>
          <a href="/vaccines/new" class="btn btn-success">Add Vaccine Information</a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <form id="search-form" method="GET" action="/vaccines?" class="form-inline bordered">
          <div class="form-group mb-4 text-white">
            <input required type="text" name="search" class="form-control" placeholder="vaccine name ...">
            <button type="submit" class="btn btn-info">Search</button>
          </div>
        </form>
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">Vaccines</h4>
        <table class="table table-bordered table-striped">
          <thead class="font-weight-normal">
            <tr>
              <td>Vaccine Id</td>
              <td>Vaccine Name</td>
              <td>Shed Vaccinated</td>
              <td>Date Administered</td>
              <td>Vaccine Duration (days)</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% vaccines.forEach((m) => { %>
              <tr>
                <td><%= m._id %></td>
                <td><%= m.vaccine_name %></td>
                <td><%= m.shed_name %></td>
                <td><%= m.date_administered.toDateString() %></td>
                <td><%= m.vaccine_duration %></td>
                <td>
                  <a href='<%= "/vaccines/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
</div> 

<%- include ('partials/bottom') %>