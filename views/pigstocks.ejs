<%- include ('partials/top') %>

    <div class="row space pb-0 mb-4 px-2 border-bottom">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title">Pig Stock</h3>
        <div>
          <a href="/pigstocks/new" class="btn btn-success">Add New Stock</a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <form id="search-form" method="GET" action="/pigstocks?" class="form-inline bordered">
          <div class="form-group mb-4 text-white">
            <input required type="text" name="search" class="form-control" placeholder="search ...">
            <button type="submit" class="btn btn-info">Search</button>
          </div>
        </form>
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">Stocks Added</h4>
        <table class="table table-bordered table-striped">
          <thead class="font-weight-normal">
            <tr>
              <td>Breed</td>
              <td>Quantity</td>
              <td>Shed Name</td>
              <td>Date Added</td>
              <td>More Information</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% pigstocks.forEach((m) => { %>
              <tr>
                <td><%= m.breed %></td>
                <td><%= m.qty %></td>
                <td><%= m.shed_name %></td>
                <td><%= m.date_added.toLocaleDateString() %></td>
                <td><%= m.additional_info %></td>
                <td>
                  <a href='<%= "/pig-stocks/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
</div> 

<%- include ('partials/bottom') %>