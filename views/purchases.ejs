<%- include ('partials/top') %>

    <div class="row space pb-0 mb-4 px-2 border-bottom">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title">Purchases</h3>
        <div>
          <a href="/purchases/new" class="btn btn-success">Add New Purchase</a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <form id="search-form" method="GET" action="/purchases?" class="form-inline bordered">
          <div class="form-group mb-4 text-white">
            <input required type="text" name="search" class="form-control" placeholder="purchase date ...">
            <button type="submit" class="btn btn-info">Search</button>
          </div>
        </form>
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Purchases</h4>
        <table class="table table-bordered table-striped">
          <thead class="font-weight-normal">
            <tr>
              <td>Purchase Id</td>
              <td>Product Description</td>
              <td>Quantity</td>
              <td>Total Price</td>
              <td>Amount Paid</td>
              <td>Date of Purchase</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% purchases.forEach((m) => { %>
              <tr>
                <td><%= m._id %></td>
                <td><%= m.description %></td>
                <td><%= m.qty %></td>
                <td><%= m.total_price %></td>
                <td><%= m.amount_paid %></td>
                <td><%= m.transaction_date.toLocaleDateString() %></td>
                <td>
                  <a href='<%= "/purchases/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
</div> 

<%- include ('partials/bottom') %>